{
    "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "subscriptionId": {
            "type": "string"
        },
        "name": {
            "type": "string"
        },
        "location": {
            "type": "string"
        },
        "hostingPlanName": {
            "type": "string"
        },
        "serverFarmResourceGroup": {
            "type": "string"
        },
        "alwaysOn": {
            "type": "bool"
        },
        "sku": {
            "type": "string",
            "allowedValues": [
                "Free",
                "Standard"
            ]
        },
        "skuCode": {
            "type": "string",
            "allowedValues": [
                "F1",
                "B1"
            ]
        },
        "workerSize": {
            "type": "string"
        },
        "workerSizeId": {
            "type": "string"
        },
        "numberOfWorkers": {
            "type": "string"
        },
        "linuxFxVersion": {
            "type": "string",
            "allowedValues": [
                "PHP|8.0",
                "PHP|7.4"
            ]
        },
        "repoUrl": {
            "type": "string",
            "defaultValue": "https://github.com/Kamakura17/Wordpress_Azure",
            "metadata": {
                "description": "Optional Git Repo URL"
            }
        },
        "branch": {
            "type": "string",
            "defaultValue": "master"
        }
    },
    "variables": {},
    "resources": [
        {
            "apiVersion": "2018-11-01",
            "name": "[parameters('name')]",
            "type": "Microsoft.Web/sites",
            "location": "[parameters('location')]",
            "tags": {
                "Name": "Sede Electronica - Dev",
                "Environment type": "DEV"
            },
            "dependsOn": [
                "[concat('Microsoft.Web/serverfarms/', parameters('hostingPlanName'))]"
            ],
            "properties": {
                "name": "[parameters('name')]",
                "siteConfig": {
                    "localMySqlEnabled": true,
                    "appSettings": [
                        { "name": "WEBSITE_MYSQL_ENABLED", "value": "1" },
                        { "name": "WEBSITE_MYSQL_GENERAL_LOG", "value": "0" },
                        { "name": "WEBSITE_MYSQL_SLOW_QUERY_LOG", "value": "0" },
                        { "name": "WEBSITE_MYSQL_ARGUMENTS", "value": "--max_allowed_packet=16M" }
                    ],
                    "minTlsVersion": "1.2",
                    "alwaysOn": "[parameters('alwaysOn')]"
                },
                "serverFarmId": "[concat('/subscriptions/', parameters('subscriptionId'),'/resourcegroups/', parameters('serverFarmResourceGroup'), '/providers/Microsoft.Web/serverfarms/', parameters('hostingPlanName'))]",
                "clientAffinityEnabled": false,
                "virtualNetworkSubnetId": null,
                "httpsOnly": true
            },
            "resources": [
                {
                    "apiVersion": "2020-06-01",
                    "name": "[format('{0}/{1}', parameters('name'), 'web')]",
                    "type": "microsoft.web/sites/sourcecontrols",
                    "dependsOn": [
                        "[resourceId('Microsoft.Web/Sites', parameters('name'))]"
                    ],
                    "properties":{
                        "RepoUrl": "[parameters('repoUrl')]",
                        "branch": "[parameters('branch')]",
                        "IsManualIntegration": true
                    }
                },
                {
                    "apiVersion": "2020-06-01",
                    "name": "web",
                    "type": "config",
                    "dependsOn": [
                        "[concat('Microsoft.Web/sites/', parameters('name'))]"
                    ],
                    "properties": {
                        "linuxFxVersion": "[parameters('linuxFxVersion')]"
                    }
                }
            ]
        },
        {
            "apiVersion": "2018-11-01",
            "name": "[parameters('hostingPlanName')]",
            "type": "Microsoft.Web/serverfarms",
            "location": "[parameters('location')]",
            "kind": "linux",
            "tags": {
                "Name": "Sede Electronica - Dev",
                "Environment type": "DEV"
            },
            "dependsOn": [],
            "properties": {
                "name": "[parameters('hostingPlanName')]",
                "workerSize": "[parameters('workerSize')]",
                "workerSizeId": "[parameters('workerSizeId')]",
                "numberOfWorkers": "[parameters('numberOfWorkers')]",
                "reserved": true,
                "zoneRedundant": false
            },
            "sku": {
                "Tier": "[parameters('sku')]",
                "Name": "[parameters('skuCode')]"
            }
        }
    ]
}